{
	"manifest_version": 3,
	"name": "Researcher Contact",
	"version": "1.0",
	"description": "Automatically search and contact researchers on jglobal.jst.go.jp",
	"permissions": [
		"activeTab",
		"scripting",
		"storage",
		"tabs"
	],
	"action": {
		"icon": {
			"128": "icon128.png"
		}
	},
	"icons": {
		"128": "icon128.png"
	},
	"content_scripts": [
		{
			"matches": [
				"https://jglobal.jst.go.jp/mail/researcher*"
			],
			"js": [
				"mail_form.js"
			]
		}
	]
}
